<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"> <%= "#{action_message} Produto" %> </h1>
  </div>
</div>

<div class="table">
  <% if @product.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end  %>

        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_with(model: [ :admins_forsale, @product ], local: true ) do |form| %>
                          <%= form.label :name %>
                          <%= form.text_field :name, class:"form-control", placeholder:"Informe o produto" %>

                          <%= form.label :description %>
                          <%= form.text_field :description, class:"form-control", placeholder:"Informe a descrição" %>
                          <br>
                          <%= form.label :category %>
                          <%= form.select("category_id", @category_options, {include_blank: 'Selecione..'}, class:"form-control" ) %>
                            <br>
                          <%= form.label :stock %>
                          <%= form.text_field :stock, class:"form-control", placeholder:"Informe o estoque" %>

                          <%= form.label :price %>
                          <%= form.text_field :price, class:"form-control", placeholder:"Informe o preço" %>
                          <br>
                          <button type="submit" class="btn btn-primary">Salvar</button>
                        <% end %>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
</div>