<div class="row">
  <div class="col-lg-12">
    <h1>Produtos</h1>
  </div>
</div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Tipo</th>
          <th>Descrição</th>
          <th>Categoria</th>
          <th>Estoque</th>
          <th>Preço</th>
          <th>
            <%= link_to new_admins_forsale_product_path, class:"btn btn-success btn-circle" do %>
              <i class="fa fa-plus"></i>
            <% end %> 
          </th>
        </tr>
        </thead>
        <tbody>
        <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.category.type %></td>
          <td><%= product.stock %></td>
          <td><%= product.price %></td>
            <td style="width: 120px">         
              <%= link_to edit_admins_forsale_product_path(product), class:"btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to admins_forsale_product_path(product), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "Certeza?"} do %>
                <i class="fa fa-minus"></i>
              <% end %>         
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

