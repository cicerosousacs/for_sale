<div class="row">
  <div class="col-lg-12">
    <h1>Vendas</h1>
  </div>
</div>
  <div>
    <form class="d-flex">
      <%= form_tag(admins_forsale_sales_path, :method => :post) do %>
        <%= text_field_tag 'search', nil, class: "form-control", placeholder: 'Date, Cliente ou Status' %>
        <%= submit_tag "Pesquisar", class: "btn btn-outline-success"%>
      <% end %>
    </form>
  </div>
<br>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Data</th>
          <th>Cliente</th>
          <th>Pagamento</th>
          <th>Comprovante</th>
          <th>Status</th>
          <th>
          </th>
        </tr>
        </thead>
        <tbody>
        <% @sales.each do |sale| %>
        <tr>
          <td><%= sale.date %></td>
          <td><%= sale.client.name %></td>
          <td><%= sale.payment.type %></td>
          <td><%= sale.invoice %></td>
          <td><%= sale.paystatus.type %></td>
            <td style="width: 60px">         
              <%= link_to edit_admins_forsale_sale_path(sale), class:"btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
              <% end %>     
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @sales %>
  </div>
