<div class="row">
  <div class="col-lg-12">
    <h1>Clientes</h1>
  </div>
</div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Genero</th>
          <th>Nascimento</th>
          <th>CPF</th>
          <th>EndereÃ§o</th>
          <th>
            <%= link_to new_admins_forsale_client_path, class:"btn btn-success btn-circle" do %>
              <i class="fa fa-plus"></i>
            <% end %> 
          </th>
        </tr>
        </thead>
        <tbody>
        <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.gender %></td>
          <td><%= client.birth_date %></td>
          <td><%= client.cpf %></td>
          <td><%= client.address %></td>
            <td style="width: 120px">         
              <%= link_to edit_admins_forsale_client_path(client), class:"btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to admins_forsale_client_path(client), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "Certeza?"} do %>
                <i class="fa fa-minus"></i>
              <% end %>         
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @clients %>
  </div>
