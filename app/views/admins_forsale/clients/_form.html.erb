<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"> <%= "#{action_message} Cliente" %> </h1>
  </div>
</div>

<div class="table">
  <% if @client.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <ul>
        <% @client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end  %>

        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_with(model: [ :admins_forsale, @client ], local: true ) do |form| %>
                          <%= form.label :name %>
                          <%= form.text_field :name, class:"form-control", placeholder:"Nome" %>

                          <%= form.label :gender %>
                          <%= form.text_field :gender, class:"form-control", placeholder:"Genero" %>

                          <%= form.label :birth_date %>
                          <%= form.text_field :birth_date, class:"form-control", placeholder:"Aniversario" %>

                          <%= form.label :cpf %>
                          <%= form.text_field :cpf, class:"form-control", placeholder:"CPF" %>

                          <%= form.label :address %>
                          <%= form.text_field :address, class:"form-control", placeholder:"Endereço" %>
                          <br>
                          <button type="submit" class="btn btn-primary">Salvar</button>
                        <% end %>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
</div>