<div class="row">
  <div class="col-lg-12">
    <h1>Categorias</h1>
  </div>
</div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Tipo</th>
          <th>
            <%= link_to new_admins_forsale_category_path, class:"btn btn-success btn-circle" do %>
              <i class="fa fa-plus"></i>
            <% end %> 
          </th>
        </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.type %></td>
            <td style="width: 120px">         
              <%= link_to edit_admins_forsale_category_path(category), class:"btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to admins_forsale_category_path(category), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "Certeza?"} do %>
                <i class="fa fa-minus"></i>
              <% end %>         
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
