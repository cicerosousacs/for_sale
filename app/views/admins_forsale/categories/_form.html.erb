<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"> <%= "#{action_message} Categoria" %> </h1>
  </div>
</div>

<div class="table">
  <% if @category.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end  %>

        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_with(model: [ :admins_forsale, @category ], local: true ) do |form| %>
                          <%= form.label :type %>
                          <%= form.text_field :type, class:"form-control", placeholder:"Informe a nova categoria" %>
                          <br>
                          <button type="submit" class="btn btn-primary">Salvar</button>
                        <% end %>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
</div>